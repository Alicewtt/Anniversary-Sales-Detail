<section class="hozo_all6onlytitle">
    <div class="hozo_Ferocioushed">
        <h2>{{ section.settings.text }}</h2>
    </div>
</section>
<section class="hozo_all6coloum">
    <div class="container">
        <div class="row">
            {% for block in section.blocks %}
            <div class="col-md-4">
                <div class="hozo_all6inner text-center">
                    <div class="hozo_all6scnd">
                        <video autoplay="" muted="" loop="">
                              <source src="{{ block.settings.video1 }}" type="video/mp4"> 
                           </video>
                        <div class="videotext">
                            <p>{{ block.settings.text1 }}</p>
                        </div>
                    </div>
                    <div class="hozo_all6first">
                        <img 
                          class="lazyload"
                          data-src="{{ block.settings.img1 | img_url : 'master' }}">
                        <h4>{{ block.settings.text2 }}</h4>
                    </div>
                </div>
            </div>  
              {% endfor %}
            <div class="core-btns">
              <button type="button" class="core-button-s">Learn more about 
            MEAZOR 3D functions</button>
            </div>  
            <div class="core-show-s">
               <ul class="core-main-s">
                   {% for block in section.blocks %}
                   <li>
                     <img 
                      class="lazyload"
                      data-src="{{ block.settings.img1 | img_url : 'master' }}">
                     <div class="core-text-s">
                       <h2>{{ block.settings.text2 }}</h2>
                       <p>{{ block.settings.text1 }}</p>
                     </div>
                   </li>
                     {% endfor %}
                
                 
                  
               </ul>
            </div>
           
        </div>
    </div>
</section>




