        "blocks": [
      {
        "type": "section",
        "name": "section",
        "settings": [

         {
            "id": "video1",
            "type": "url",
            "label": "Add video url"
          },
          {
            "id": "text1",
            "type": "textarea",
            "label": "Add text"
          },
         {
            "id": "img1",
            "type": "image_picker",
            "label": "Add Image"
          },
           {
            "id": "text2",
            "type": "text",
            "label": "Add text"
          }
        ]
      }
    ],
    "presets":[{
 "name": "Meazor-6function",
