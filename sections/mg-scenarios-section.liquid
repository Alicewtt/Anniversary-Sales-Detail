        "type": "slider",
        "name": "slider",
        "settings": [

       {
            "id": "img1",
            "type": "image_picker",
            "label": "Add Image"
          },
         {
            "id": "text1",
            "type": "textarea",
            "label": "Add name"
          },
          {
            "id": "text2",
            "type": "textarea",
            "label": "Add text"
          },
          {
            "id": "text3",
            "type": "textarea",
            "label": "Add text"
          },
           {
            "id": "img2",
            "type": "image_picker",
            "label": "Add Image"
          },
           {
            "id": "img3",
            "type": "image_picker",
            "label": "Add Image"
          }
        ]
      }
        
    ],
    "presets":[{
 "name": "Meazor-scenarios-section",
"category": "Custom Content"

}]
  }
