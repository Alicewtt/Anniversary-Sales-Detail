
<section class="scenarios-section">
    <div class="container">
        <div class="hozo_Ferocioushed">
            <h2>{{ section.settings.text1}}</h2>
        </div>
        <div class="owl-carousel scenarios-slider">
          {% for block in section.blocks %}
            <div class="item">
               <div class="client-details">
                   <div class="client-left">
                       <img src="{{ block.settings.img1 | img_url : 'master' }}">
                       <h2>{{ block.settings.text1}} <span>{{ block.settings.text2}}</span></h2>
                       <p>{{ block.settings.text3}}</p>
                   </div>
                   <div class="client-right">
                        <div class="review-img">
                            <img src="{{ 'ratting-m-img.svg' | asset_url }}">
                        </div>
                   </div>
               </div>
               <div class="slide-scenarios">
                   <div class="scenarios-slide-image">
                       <img src="{{ block.settings.img2 | img_url : 'master' }}">
                   </div>
                   <div class="scenarios-slide-image">
                       <img src="{{ block.settings.img3 | img_url : 'master' }}">
                   </div>
               </div>
            </div> 
         {%  endfor %}
        </div>
    </div>
</section>


