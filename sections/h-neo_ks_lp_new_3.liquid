<script>

  var swiper = new Swiper('#swiper-container1', {
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    direction: 'vertical',
    slidesPerView: 1,
    spaceBetween: 30,
    mousewheel: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
  });
  
  function loadImage (){

    if($(window).width()<900){
    
      $('.section-3 .right-box').height($('.section-3 .right-box .item-box img').height()+37+24+7+37)
    
    }

    
  }

  //opacity清除内容重叠bug
</script>


