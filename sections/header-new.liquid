                            <div class="sub-image">
                              <img src="{{ section.settings.coll-img |img_url:'master' }}" data-huanhuan="h-234">
                            </div>
                          </a>
                        </li>
                         <p>{{ section.settings.coll_title }}
                          
                         </p>
                      </ul>

                      <!--  for collection   -->
                   
                    </div>
                  </div>
                </li>
                           {% endif %}
