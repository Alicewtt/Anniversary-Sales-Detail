             {% for block in section.blocks %}
              {% if block.type == 'support' %}  
                <li><a href="{{ block.settings.lurl1 }}">{{ block.settings.ltext1 }}</a></li> 
                {% endif %}
                {% endfor %}
                  
           {% for block in section.blocks %}
              {% if block.type == 'icon' %}  
                <li>
                  <a href="{{ block.settings.url1 }}" class="new_menu">{{ block.settings.text1 }} </a>
                  <div class="megamenu-panel">
                    <div class="megamenu-lists"> 
                     {% for link in linklists[block.settings.coll1].links %}
                      <ul class="megamenu-list list-col-3 rolvo-imagcontent header-icons">
                        <li class="rolvo-imag resize-image">
                          <a href="{{link.url}}"> 
                            <div class="sub-image">
                                 {% assign menutile = link.title %}
                                {% for block in section.blocks %}
                                  {% assign checktile = block.settings.mn %}
                                  {% if checktile == menutile %}
                              <img src="{{ block.settings.mi | img_url : 'master' }}">
                               {% break %}
                                
                                  {% endif %}
                                  {% endfor %}
                                  </div>
                         </a>
                        </li>
                         <p>{{link.title}}</p>
                      </ul>
                    {% endfor %}
                     
                    </div>
                  </div>
                </li>
                 {% endif %}
                  {% endfor %}
      {% for block in section.blocks %}
              {% if block.type == 'link' %}  
                <li><a href="{{ block.settings.lurl1 }}">{{ block.settings.ltext1 }}</a></li> 
                {% endif %}
                {% endfor %}

                
                <li><a href="{{shop.url}}/account" class="m_menu useraccount_re"> <i class="fa fa-user-o" aria-hidden="true" style="color:black;"></i></a></li>
                <li><a href="#" class="m_menu cartpix site-header__cart"><i class="fa fa-shopping-cart" aria-hidden="true" style="color:black;"></i></a></li>  
                
