<section class="artical_subh_user_menual ">
            <div class="container">
                <div class="subh_user_menual text-center">
                    <div class="top-bar">
                        <h2> user manual</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-10 m-auto">
                            <div class="row">
                              {% for block in section.blocks  %}
                                <div class="col-md-3 col-6">
                                    <ul>
                                      {% if block.settings.img1 != blank %}
                                        <li><a href="{{block.settings.url1}}"><img src="{{block.settings.img1 | img_url : 'master'}}"><p>{{block.settings.text1}}</p></a></li>
                                        {% endif %}
                                       {% if block.settings.img2 != blank %}
                                      <li><a href="{{block.settings.url2}}"><img src="{{block.settings.img2 | img_url : 'master'}}"><p>{{block.settings.text2}}</p></a></li>
                                       {% endif %}
                                    </ul>
                                </div>
                              
                             {% endfor %} 
                              
                  
                                
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

