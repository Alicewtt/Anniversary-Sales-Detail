          },
         {
            "id": "url1",
            "type": "url",
            "label": "Add url (1)"
          },
         {
            "id": "img2",
            "type": "image_picker",
            "label": "Add logo (2)"
          },
          {
            "id": "text2",
            "type": "textarea",
            "label": "Add country name (2)"
          },
         {
            "id": "url2",
            "type": "url",
            "label": "Add url (2)"
          }
        ]
      }
    ]
  }
