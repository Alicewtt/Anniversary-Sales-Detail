<script type="text/javascript">

  
  const loader_1 = new PxLoader();
  const images_1 = [];
  //  let ruler_canvas_width = $(window).width()*(3/4);
  // let ruler_canvas_height = 0.139*$(window).width()*(3/4);
  for (let i = 0; i < 30; i++) {
    images_1[i] = loader_1.addImage(
      `https://cdn.shopifycdn.net/s/files/1/0549/7667/6078/files/Home_Motion${('00' + (i + 1)).slice(-3)}.png`
    );
  }

  var section_0_ruler_canvas_width = $(window).width();
  var section_0_ruler_canvas_height = 0.1558*section_0_ruler_canvas_width;

  if($(window).width()>1200){
    section_0_ruler_canvas_width = 1200
    section_0_ruler_canvas_height = 0.1558*1200;
    console.log('屏幕《1200')
  }else if($(window).width()<1200&&$(window).width()>900){
    section_0_ruler_canvas_width = 800
    section_0_ruler_canvas_height = 0.1558*800;
    console.log('屏幕1200-900')
    
