  $('#ruler_animate').attr('width',section_0_ruler_canvas_width)
  $('#ruler_animate').attr('height',section_0_ruler_canvas_height)

  loader_1.addCompletionListener(function () {
    let context = $('#ruler_animate')[0].getContext('2d');
    context.drawImage(images_1[0], 0, 0, section_0_ruler_canvas_width, section_0_ruler_canvas_height);
  });
  loader_1.start();

  // TweenMax can tween any property of any object. We use this object to cycle through the array
  var obj_1 = { curImg: 0 };

  // create tween
  var section_0_tween_1 = TweenMax.to(obj_1, 3, {
    curImg: images_1.length - 1, // animate propery curImg to number of images_1
    roundProps: 'curImg', // only integers so it can be used as an array index
    // repeat: 0,
    paused: true, // repeat 3 times
    immediateRender: true, // load first image automatically
    // ease: Linear.easeNone,			// show every image the same ammount of time
    onUpdate: function () {
      let context = $('#ruler_animate')[0].getContext('2d');
      let c_1=$("#ruler_animate")[0];
      context.fillStyle = 'rgba(0, 255, 255, 0)';
      context.clearRect(0,0,c_1.width,c_1.height);  
      context.beginPath();
      context.fillRect(0,0,c_1.width,c_1.height);
      context.closePath();
      context.drawImage(images_1[obj_1.curImg], 0, 0, section_0_ruler_canvas_width, section_0_ruler_canvas_height);
    },
    onComplete: function () {
      $('.section-0 .input-sub-title').text('Thank you for subscription')
      $('.before-box').hide();
      $('.after-box').css('opacity', 0).show().animate({ opacity: 1 }, 500);
      $('html,body').animate({ scrollTop: $('#ruler_animate').offset().top - 50 }, 600);
    },
  });

  // create tween mobile

  var section_0_tween_1_mobile = new TimelineMax({
    paused: true,
    repeat: 0,	
    
  })
    .to('#ruler_animate_mobile', 1.5, {
      boxShadow:"0px 0px 0px 0px #000000 inset",
        								// repeat 3 times
