<style>
  .h-still-need-help-col{
    position: relative;
    
    top: 50px;
    transform: translateY(0);
    right: 0;
  }
  .still-need-help-col h1{
    color: #000;
  }
  .still-need-help-col p{
    color:#000;
    padding-bottom: 40px;
    padding-top: 10px;
  }
</style>

<section class="still-need-help-section">
      <div class="container">
        <div class="still-need-help-section-inner" style="background-image:url({{ section.settings.h_image | img_url:'master' }});">
          <div class="still-need-help-col h-still-need-help-col">
            <h1> {{ section.settings.title }}</h1>
            <p> {{ section.settings.subtitle }}</p>
             <a href="{{ section.settings.button_url }}">{{ section.settings.Button_title }}<i class="fa fa-angle-right" aria-hidden="true"></i></a>
          </div>
          
        </div>
      </div>

      
</section>



{% schema %}
  {
"name": "still-need-help-section",
   "settings": [
    {
      "id": "h_image",
      "type": "image_picker",
      "label": "图片"

    },
       {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
   {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
     {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
     {
      "type": "text",
      "id": "Button_title",
      "label": "Button title"
    }
    
 ],
    
"presets":[{
 "name": "still-need-help-section",
"category": "still-need-help-section"

}]
  }
{% endschema %}