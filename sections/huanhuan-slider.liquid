<!-- Swiper -->
<div class="swiper huanhuan-slider h-swiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="item-box swiper-slide">
        <a href="{{block.settings.url}}" class="item-url">
          <img
            class="lazyload img-pc"
            style=" width:100%;height:auto;"
            data-src="{{block.settings.item_image_1_1 | img_url: '1800x'}}"
          >
          <img
            class="lazyload img-mobile"
            style=" width:100%;height:auto;"
            data-src="{{block.settings.item_image_1_2 | img_url: '1800x'}}"
          >
          <div class="title-mobile" style="{% if block.settings.isShowContent == 'true' %}display:block;{% else %}display:none;{% endif %}" >
            Happy<br> Valentine's Day <br>TO YOU!

            <img
                class="icon"
                src="https://cdn.shopify.com/s/files/1/0549/7667/6078/files/bi_chat-left-heart-fill.png?v=1675841021"
              >
            </div>

        </a>
        <div class="content-box"  style="{% if block.settings.isShowContent == 'true' %}display:block;{% else %}display:none;{% endif %}" >
          <div class="title">Happy <br>Valentine's Day<br>TO YOU!
          <img
            class="icon"
            src="https://cdn.shopify.com/s/files/1/0549/7667/6078/files/bi_chat-left-heart-fill.png?v=1675841021"
          >
            

        </div>

          <a href="{{block.settings.quan_url}}" class="h-quan-btn">
            <img
              class="lazyload"
              style=" width:100%;height:auto;"
              data-src="{{block.settings.item_image_1_3 | img_url: '1800x'}}"
            >
          </a>
          <div class="sub-title">Time: Feb 8th-Feb 28th</div>
          <a href="{{block.settings.btn_url}}" class="h-btn">SHOP GIFTS</a>
        </div>
      </div>

    {% endfor %}
  </div>
</div>


<!-- Swiper JS -->
<!-- swiper -->
<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
<script src="{{ 'swiper.min.js' | asset_url }}"></script>
