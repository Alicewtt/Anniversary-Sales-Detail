</style>
<section class="section-6">
  <div class="title">NeoRuler New Ways</div>
  <div class="sub-title">Modular Design for Every Possibility</div>
  <div class="inner-box">
    <div class="swiper-box">
      <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper3">
        <div class="swiper-pagination_3"></div>

        <div class="swiper-wrapper">

          {% for block in section.blocks %}
           

            <div class="swiper-slide">
              <div class="text-box">
                <div class="font-1">{{ block.settings.text_1}}</div>
                <div class="font-2">{{ block.settings.text_2}}</div>
              </div>
              <img src="{{ block.settings.slide_image | img_url:'master' }}">
            </div>
          {% endfor %}
          
        
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "h-neo_kslp_new_6",
  "settings": [],
  "max_blocks": 4,
  "blocks": [
    {
      "type": "slide",
      "name": "slide",
   
      "settings": [
        {
          "type": "html",
          "id": "text_1",
          "label": "轮播文字1",
          "default":"Drawing Mode"
        },
        {
          "type": "html",
          "id": "text_2",
          "label": "轮播文字2",
          "default":"Only one click away from 2D to 3D Display"
        },
        {
          "id": "slide_image",
          "type": "image_picker",
          "label": "轮播图片"
        }
        
      ]
    }
  ],

  "default": {
    "blocks": [
      {
        "type": "slide"
      },
      {
        "type": "slide"
      },
      {
        "type": "slide"
      },
      {
        "type": "slide"
      }
    ]
  }
}
{% endschema %}

