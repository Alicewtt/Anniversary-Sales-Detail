  @media(max-width:420px){
    

    .section-6 .sub-title{
      margin-bottom:15px;
    }

    .section-6 .swiper-box{
      padding:0 15px;
    }

    .section-6 .mySwiper3 .text-box .font-1{
      font-size: 26.7429px;
      line-height: 37px;
