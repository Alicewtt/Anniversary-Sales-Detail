
<section class="hozo_drawingmd">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="hozo__drawing-cnt">   
                    <h2>{{section.settings.text1}}</h2>
                    <p>{{section.settings.text2}}</p>
                </div> 
            </div>
            <div class="col-md-6">
                <div class="hozo__drw-imright">   
                    <img src="{{section.settings.img1 | img_url : 'master'}}">
                </div> 
            </div>
        </div>
    </div>
</section>


<section class="hozo_listmode">
