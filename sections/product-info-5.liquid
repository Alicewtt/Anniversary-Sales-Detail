                    <img src="{{section.settings.img2 | img_url : 'master'}}" class="hozo__listmode-desktop">
                    <img src="{{section.settings.img3 | img_url : 'master'}}" class="hozo__listmode-mobile">
                </div> 
            </div>
            <div class="col-md-6">
                <div class="hozo__drawing-cnt cork__pdlmore">   
                    <h2>{{section.settings.text3}}</h2>
                    <p>{{section.settings.text4}}</p>
                </div> 
            </div>
        </div>
    </div>
</section>


<section class="hozo_photodim">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="hozo__drawing-cnt">   
                    <h2>{{section.settings.text5}}</h2>
                    <p>{{section.settings.text6}}</p>
                </div> 
            </div>
            <div class="col-md-6">
                <div class="hozo__photo-img">   
                    <img src="{{section.settings.img4 | img_url : 'master'}}">
                </div> 
            </div>

        </div>
    </div>
</section>

