<style>
  .swiper-container {
    width: 100%;
    height: 100%;
  }
  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide img {
    width: 100%;
    height: auto;
  }
</style>

<div class="swiper-container parent-swiper">
  <div class="swiper-wrapper">
    <div class="swiper-slide">
      aa
      <div class="swiper-container child-swiper">
        <div class="swiper-wrapper">
         
          <div class="swiper-slide">11</div>
          <div class="swiper-slide">22</div>
          <div class="swiper-slide">33</div>
        </div>
      </div>
    </div>
    <div class="swiper-slide">
      bb
    <div class="swiper-container child-swiper">
      <div class="swiper-wrapper">
       
        <div class="swiper-slide">111</div>
        <div class="swiper-slide">222</div>
        <div class="swiper-slide">333</div>
        <div class="swiper-slide">444</div>
       
      </div>
    </div>
    </div>
    <div class="swiper-slide">cc</div>
  </div>
</div>



<script>
  var parentSwiper = new Swiper('.parent-swiper', {
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    on: {
      slideChangeTransitionEnd: function () {
        if (this.activeIndex === this.slides.length - 1) {
          childSwiper.slideNext();
        }
      }
    }
  });

  var childSwiper = new Swiper('.child-swiper', {
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    on: {
      slideChangeTransitionEnd: function () {
        if (this.activeIndex === this.slides.length - 1) {
          parentSwiper.slideNext();
        }
      }
    }
  });
</script>

