<script>
  var outerSwiper = new Swiper('.outer-swiper-container', {
    // 外部轮播的配置
   
    on: {
      slideChangeTransitionEnd: function() {
        var innerSwiper = this.slides[this.activeIndex].querySelector('.inner-swiper-container').swiper;
        if (innerSwiper.isEnd) {
          this.slideNext();
        }
      }
    }
  });
  
  var innerSwipers = [];
  var innerSwiperContainers = document.querySelectorAll('.inner-swiper-container');
  for (var i = 0; i < innerSwiperContainers.length; i++) {
    var innerSwiper = new Swiper(innerSwiperContainers[i], {
      // 内部轮播的配置
      autoplay: {
        delay: 2000,
        disableOnInteraction: false,
      },
      nested: true,
      on: {
        slideChangeTransitionStart: function() {
          for (var j = 0; j < innerSwipers.length; j++) {
            if (innerSwipers[j] !== this) {
              innerSwipers[j].autoplay.stop();
            }
          }
        },
        slideChangeTransitionEnd: function() {
          for (var j = 0; j < innerSwipers.length; j++) {
            if (innerSwipers[j] !== this) {
              innerSwipers[j].autoplay.start();
            }
          }
        }
      }
    });
    innerSwipers.push(innerSwiper);
  }
</script>

