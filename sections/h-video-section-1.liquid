  "name": "h_ruler-video",
  "settings": [
    {
      "id": "img1",
      "type": "image_picker",
      "label": "Add Image"
    },
    {
      "id": "url1",
      "type": "url",
      "label": "Add video url"
    }
  ],
  "presets": [
    {
      "name": "h-Meazor-video",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}

